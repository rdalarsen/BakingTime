<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.worric.bakingtime">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.detail.DetailActivity"
            android:parentActivityName=".ui.main.MainActivity" />

        <receiver android:name=".ui.widget.BakingWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/baking_widget_info" />
        </receiver>

        <service
            android:name=".ui.widget.WidgetUpdateService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service
            android:name=".ui.widget.BakingRemoteViewsService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity android:name=".ui.widget.WidgetConfigActivity"></activity>
    </application>

</manifest>